<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ventanaGraficarGeneral"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Graficar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ventanaGraficar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Graficar">
        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="150dp"
            android:gravity="center_horizontal"
            android:text="GRAFICADOR MOVIL"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/ventanaBotonReportes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".Graficar"
        tools:layout_editor_absoluteX="20dp"
        app:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/buttonReporteGraficos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="VER REPORTES"

            android:orientation="vertical"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

